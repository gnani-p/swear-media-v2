<div class="collection-page container" style="padding-top: 6rem; padding-bottom: 6rem;">
  
  <header class="page-header" style="border-bottom: 2px solid var(--border-color); padding-bottom: 1rem; margin-bottom: 3rem;">
    <h1 style="font-size: 4rem;">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p style="margin-top: 1rem;">{{ collection.description }}</p>
    {% endif %}
  </header>

  <div class="collection-controls" style="margin-bottom: 2rem; display: flex; justify-content: space-between; align-items: center;">
    <div class="filters">
      <!-- Placeholder for filters -->
      <button class="filter-button">Filter by</button>
    </div>
    <div class="sorting">
      <!-- Placeholder for sorting -->
      <select name="sort_by" id="sort_by" class="sort-by-select">
        <option value="manual">Featured</option>
        <option value="best-selling">Best selling</option>
        <option value="title-ascending">Alphabetically, A-Z</option>
        <option value="title-descending">Alphabetically, Z-A</option>
        <option value="price-ascending">Price, low to high</option>
        <option value="price-descending">Price, high to low</option>
        <option value="created-ascending">Date, old to new</option>
        <option value="created-descending">Date, new to old</option>
      </select>
    </div>
  </div>

  <div class="collection-products grid-container">
    {% for product in collection.products %}
      <a href="{{ product.url }}" class="glitch-card block group relative" style="border: 1px solid var(--border-color); background-color: white;">
        <div class="card-image-wrapper relative overflow-hidden">
          {% render 'product-card-image', product: product %}
        </div>
        
        <div class="card-content" style="padding: 1rem; border-top: 1px solid var(--border-color);">
          <h3 class="text-xl group-hover:text-accent" style="font-size: 1.25rem; color: var(--text-color);">{{ product.title }}</h3>
          <p style="margin-top: 0.5rem; color: var(--accent-color);">
            {{ product.price | money }}
          </p>
        </div>
      </a>
    {% else %}
      <p>No products found in this collection.</p>
    {% endfor %}
  </div>

</div>



{% schema %}
{
  "name": "Shop Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shop"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Welcome to the shop.</p>"
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sortSelect = document.getElementById('sort_by');
    if (sortSelect) {
      sortSelect.addEventListener('change', function(e) {
        const value = e.target.value;
        const url = new URL(window.location.href);
        url.searchParams.set('sort_by', value);
        window.location = url.toString();
      });
    }
  });
</script>
