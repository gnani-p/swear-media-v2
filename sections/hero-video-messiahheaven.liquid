<style>
  .desktop-video { display: block; }
  .mobile-video { display: none; }

  @media (max-width: 768px) {
    .desktop-video { display: none; }
    .mobile-video { display: block; }
  }

  /* Typing and Fade-in Animations */
  .typing-effect {
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    animation: 
      typing var(--typing-duration, 1s) steps(var(--char-count, 11)) forwards;
    width: 0;
  }

  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }

  .fade-in-effect {
    opacity: 0;
    animation: fadeIn 2s ease-in-out forwards;
    animation-delay: var(--typing-duration, 1s);
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
<div class="hero-wrapper relative" style="position: absolute; top: 0; left: 0; width: 100%; height: 100vh; overflow: hidden;">
  
  <!-- Background Video -->
  <div class="hero-bg absolute inset-0" style="z-index: 0;">
    {% if section.settings.video_url != blank %}
      <video autoplay muted loop playsinline class="w-full h-full object-cover desktop-video">
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {% endif %}
    {% if section.settings.mobile_video_url != blank %}
      <video autoplay muted loop playsinline class="w-full h-full object-cover mobile-video">
        <source src="{{ section.settings.mobile_video_url }}" type="video/mp4">
      </video>
    {% endif %}
    {% if section.settings.video_url == blank and section.settings.mobile_video_url == blank %}
      <div style="width: 100%; height: 100%; background: #222; display: flex; align-items: center; justify-content: center;">
        <span class="font-mono" style="color: #666;">UPLOAD VIDEO IN THEME EDITOR</span>
      </div>
    {% endif %}

  </div>





  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var desktopVideo = document.querySelector('.desktop-video');
      var mobileVideo = document.querySelector('.mobile-video');

      if (desktopVideo) {
        desktopVideo.playbackRate = 1.0;
      }
      if (mobileVideo) {
        mobileVideo.playbackRate = 1.75;
      }
    });
  </script>
</div>

{% schema %}
{
  "name": "Hero Messiahheaven",
  "settings": [

    { "type": "url", "id": "video_url", "label": "Background Video URL (MP4)" },
    { "type": "url", "id": "mobile_video_url", "label": "Mobile Background Video URL (MP4)" },

  ],
  "presets": [{ "name": "Hero Messiahheaven" }]
}
{% endschema %}