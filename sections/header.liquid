<header class="site-header">
  <div class="container flex justify-between items-center" style="height: 64px;">
    <!-- Logo -->
    <a href="/" class="logo font-stencil">
      "SWEAR<span class="text-accent">MEDIA"</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="desktop-nav">
      <!-- You can manage these links in Shopify Admin > Navigation > Main Menu -->
      <a href="/collections/films" class="nav-link font-mono uppercase">Films</a>
      <a href="/pages/brands" class="nav-link font-mono uppercase">Brands</a>
      <a href="/pages/portraits" class="nav-link font-mono uppercase">Portraits</a>
    </nav>
    
    <!-- Mobile Toggle -->
    <div class="mobile-toggle">
      <div class="bar1"></div>
      <div class="bar2"></div>
      <div class="bar3"></div>
    </div>
  </div>
</header>

{% include 'side-menu' %}

<script>
  document.querySelector('.mobile-toggle').addEventListener('click', function() {
    this.classList.toggle('change');
    var menu = document.getElementById('side-menu');
    if (menu.style.width === '250px') {
      menu.style.width = '0';
    } else {
      menu.style.width = '250px';
    }
  });

  document.querySelector('.close-btn').addEventListener('click', function() {
    document.querySelector('.mobile-toggle').classList.remove('change');
    document.getElementById('side-menu').style.width = '0';
  });
</script>

