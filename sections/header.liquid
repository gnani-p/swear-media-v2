<header class="site-header{% if template.suffix == 'messiahheaven' %} transparent-header{% endif %}">
  <style>
    .site-header.transparent-header {
      background-color: transparent;
      position: absolute;
      width: 100%;
      z-index: 99;
    }
    .site-header.transparent-header .logo,
    .site-header.transparent-header .nav-link {
      color: white; /* Adjust text color for visibility on transparent header */
    }
  </style>
  <div class="container flex justify-between items-center relative" style="height: 64px;">
    <!-- Left: Mobile Toggle & Desktop Nav -->
    <div class="nav-left flex items-center">
      <div class="mobile-toggle flex items-center" style="gap: 1rem;">
        <div class="hamburger">
          <div class="bar1"></div>
          <div class="bar2"></div>
          <div class="bar3"></div>
        </div>
      </div>
    </div>

    <!-- Center: Logo -->
    <div class="nav-center absolute" style="left: 50%; transform: translateX(-50%); text-align: center;">
      <a href="{% if template.suffix == 'messiahheaven' %}/pages/messiahheaven{% else %}/{% endif %}" class="logo font-stencil">
        {% if template.suffix == 'messiahheaven' %}
          <img src="https://cdn.shopify.com/s/files/1/0597/6509/6512/files/IMG_20251212_230335.png?v=1765598651" alt="MESSIAHHEAVEN" style="max-height: 50px;">
          <a href="https://swearmedia.com" class="swear-media-link" style="color: white; text-decoration: none;">x SWEAR MEDIA</a>
        {% else %}
          "SWEAR<span class="text-accent">MEDIA"</span>
        {% endif %}
      </a>
    </div>

    <!-- Right: Cart -->
    <div class="nav-right flex items-center">
      <a href="/cart" class="cart-icon">
        <i class="fas fa-shopping-cart"></i>
      </a>
    </div>
  </div>
</header>

{% include 'side-menu' %}

<script>
  document.querySelector('.hamburger').addEventListener('click', function() {
    document.querySelector('.mobile-toggle').classList.toggle('change');
    document.getElementById('side-menu').classList.toggle('open');
  });

  document.querySelector('.close-btn').addEventListener('click', function() {
    document.querySelector('.mobile-toggle').classList.remove('change');
    document.getElementById('side-menu').classList.remove('open');
  });
</script>

{% schema %}
{ "name": "Header", "settings": [] }
{% endschema %}
