{% comment %}
  Shopify Section: Instagram Grid Embed
  Role: Uses blocks to allow multiple Instagram post embed codes in a responsive grid.
  The grid will dynamically adjust based on the number of posts added.
{% endcomment %}

<div class="section-instagram-grid container mx-auto py-8 md:py-12 px-4" data-section-id="{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="font-stencil uppercase text-2xl mb-8 text-center text-white">{{ section.settings.title }}</h2>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="instagram-grid grid gap-8 
      grid-cols-1 
      sm:grid-cols-2 
      lg:grid-cols-3">

      {% for block in section.blocks %}
        <div class="instagram-post-item" {{ block.shopify_attributes }}>
          {% if block.settings.block_title != blank %}
            <h3 class="font-mono text-sm text-concrete mb-3">{{ block.settings.block_title }}</h3>
          {% endif %}
          
          {% if block.settings.embed_code != blank %}
            <!-- The post content container -->
            <div class="instagram-post-container p-4 border border-swear-gray bg-swear-black shadow-lg h-full">
              {{ block.settings.embed_code }}
            </div>
          {% else %}
            <div class="bg-swear-gray p-8 text-center border-dashed border-2 border-concrete h-full flex items-center justify-center">
              <p class="font-mono text-xs text-concrete">
                [Grid Item {{ forloop.index }}] Add the Instagram embed code in the theme editor block settings.
              </p>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="bg-swear-gray p-12 text-center border-dashed border-2 border-concrete">
      <p class="font-mono text-sm text-concrete mb-2">
        [Instagram Grid] No posts added yet.
      </p>
      <p class="font-mono text-xs text-concrete">
        Click "Add Instagram Post" in the section settings to begin.
      </p>
    </div>
  {% endif %}
</div>

<style>
  /* Crucial CSS: The Instagram script dynamically injects an iframe. 
    This ensures the iframe width adheres to the grid column width, 
    making the post responsive and fitting into the grid.
  */
  .instagram-post-container > div {
    /* Ensures the main Instagram blockquote wrapper takes 100% of the column space */
    width: 100% !important; 
    margin: 0 !important;
  }
  .instagram-post-container iframe {
    /* This style is key for responsiveness, overriding Instagram's fixed width */
    max-width: 100% !important; 
    width: 100% !important;
    min-width: 0 !important;
  }
</style>

{% schema %}
{
  "name": "Instagram Grid Embed",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Heading",
      "default": "Latest from Swear Media",
      "info": "Heading above the grid."
    }
  ],
  "blocks": [
    {
      "type": "instagram_post",
      "name": "Instagram Post",
      "settings": [
        {
          "type": "text",
          "id": "block_title",
          "label": "Post Title (Optional)",
          "info": "e.g., 'New Film Trailer'"
        },
        {
          "type": "html",
          "id": "embed_code",
          "label": "Instagram Embed Code (Required)",
          "info": "Paste the full embed code (HTML and script tags) from Instagram here. You MUST include the full <blockquote...> and <script> tags."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Grid (Multiple Posts)",
      "category": "Social"
    }
  ],
  "max_blocks": 6
}
{% endschema %}

