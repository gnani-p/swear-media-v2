{% comment %}
  Shopify Section: Instagram Grid Embed (Revised for Smaller, Auto-Assorting Grid)
  Role: Displays multiple Instagram posts in a compact, responsive grid.
  Aggressive CSS ensures embeds scale down more effectively.
{% endcomment %}

<div class="section-instagram-grid container mx-auto py-8 md:py-12 px-4" data-section-id="{{ section.id }}">
  {% if section.settings.title != blank %}
    <h2 class="font-stencil uppercase text-2xl mb-8 text-center text-white">{{ section.settings.title }}</h2>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="instagram-grid grid gap-4 
      grid-cols-1 
      sm:grid-cols-2 
      lg:grid-cols-4 
      xl:grid-cols-5"> {# Increased columns for desktop to make them smaller #}

      {% for block in section.blocks %}
        <div class="instagram-post-item" {{ block.shopify_attributes }}>
          {% if block.settings.block_title != blank %}
            <h3 class="font-mono text-xs text-concrete mb-2 text-center">{{ block.settings.block_title }}</h3>
          {% endif %}
          
          {% if block.settings.embed_code != blank %}
            <!-- The post content container with fixed aspect ratio --><div class="instagram-post-container relative w-full overflow-hidden border border-swear-gray bg-swear-black shadow-lg" 
                 style="padding-top: 100%; /* Creates a 1:1 aspect ratio container for the square Instagram post */">
              <div class="absolute inset-0 flex items-center justify-center">
                {{ block.settings.embed_code }}
              </div>
            </div>
          {% else %}
            <div class="bg-swear-gray p-4 text-center border-dashed border-2 border-concrete h-full flex flex-col items-center justify-center">
              <p class="font-mono text-xs text-concrete">
                [Grid Item {{ forloop.index }}] Add Instagram embed code.
              </p>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="bg-swear-gray p-12 text-center border-dashed border-2 border-concrete">
      <p class="font-mono text-sm text-concrete mb-2">
        [Instagram Grid] No posts added yet.
      </p>
      <p class="font-mono text-xs text-concrete">
        Click "Add Instagram Post" in the section settings to begin.
      </p>
    </div>
  {% endif %}
</div>

<style>
  /*
    Critical CSS for making Instagram embeds smaller and fit a grid.
    Instagram embeds often have min-widths baked in, so we have to be aggressive.
  */
  .instagram-post-container {
    /* We use padding-top for aspect ratio, so height: 0 is important */
    height: 0; 
  }

  .instagram-post-container > div {
    /* This targets the main blockquote wrapper Instagram injects */
    width: 100% !important; 
    height: 100% !important; /* Take full height of its parent */
    margin: 0 !important;
    display: flex; /* Use flex to center iframe inside */
    align-items: center;
    justify-content: center;
  }

  .instagram-post-container iframe {
    /* This is the key override for the iframe itself */
    max-width: 100% !important; 
    max-height: 100% !important;
    width: 100% !important; 
    height: 100% !important;
    min-width: 0 !important; /* Crucial to allow shrinking */
    min-height: 0 !important; /* Crucial to allow shrinking */
    position: absolute; /* Allows it to fill the absolutely positioned parent div */
    top: 0;
    left: 0;
    border: none; /* Remove any default iframe borders */
  }

  /* Make sure the script tag's container doesn't create extra space */
  .instagram-post-item .instagram-post-container + script {
      display: none;
  }
</style>

{% schema %}
{
  "name": "Instagram Grid Embed (Small)",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Heading",
      "default": "Latest from Swear Media",
      "info": "Heading above the grid."
    }
  ],
  "blocks": [
    {
      "type": "instagram_post",
      "name": "Instagram Post",
      "settings": [
        {
          "type": "text",
          "id": "block_title",
          "label": "Post Title (Optional)",
          "info": "e.g., 'New Film Trailer'"
        },
        {
          "type": "html",
          "id": "embed_code",
          "label": "Instagram Embed Code (Required)",
          "info": "Paste the full embed code (HTML and script tags) from Instagram here. You MUST include the full <blockquote...> and <script> tags."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Grid (Small Posts)",
      "category": "Social",
      "blocks": [
        { "type": "instagram_post" },
        { "type": "instagram_post" },
        { "type": "instagram_post" }
      ]
    }
  ],
  "max_blocks": 10
}
{% endschema %}
