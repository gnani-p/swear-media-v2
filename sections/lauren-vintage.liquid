{% comment %}
  Section for the Lauren's Vintage page.
{% endcomment %}

<div class="page-container container" style="padding-top: 6rem; padding-bottom: 6rem;">
  
  <header class="page-header" style="border-bottom: 2px solid var(--swear-white); padding-bottom: 1rem; margin-bottom: 3rem;">
    <h1 class="font-stencil uppercase" style="font-size: 4rem;">{{ section.settings.title }}</h1>
  </header>

  <div class="page-content font-mono" style="font-size: 1.125rem; line-height: 1.6;">
    {{ section.settings.content }}
    
    <div class="vintage-collection" style="margin-top: 4rem;">
      {% assign collection = collections[section.settings.collection] %}
      {% render 'collection', collection: collection %}
    </div>
  </div>
  
</div>

{% schema %}
{
  "name": "Lauren's Vintage",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Lauren's Vintage"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Welcome to Lauren's Vintage. This is a collection of hand-picked vintage items.</p>"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ]
}
{% endschema %}
