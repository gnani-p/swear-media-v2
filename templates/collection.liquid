{% comment %}
  Default template for all product collections (like /drops or /films).
{% endcomment %}

<div class="collection-page container" style="padding-top: 6rem; padding-bottom: 6rem;">
  
  <header class="page-header" style="border-bottom: 2px solid var(--swear-white); padding-bottom: 1rem; margin-bottom: 3rem;">
    <h1 class="font-stencil uppercase" style="font-size: 4rem;">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p class="font-mono" style="margin-top: 1rem; color: var(--swear-concrete);">{{ collection.description }}</p>
    {% endif %}
  </header>

  <div class="collection-products grid-container">
    {% for product in collection.products %}
      {% comment %} 
        Re-use the same aesthetic as the homepage cards 
      {% endcomment %}
      <a href="{{ product.url }}" class="glitch-card block bg-swear-black border border-swear-gray group relative" style="border: 1px solid var(--swear-gray);">
        <div class="card-image-wrapper relative overflow-hidden">
          {% render 'product-card-image', product: product %}
        </div>
        
        <div class="card-content" style="padding: 1rem; border-top: 1px solid var(--swear-gray);">
          <h3 class="font-stencil text-xl group-hover:text-accent" style="font-size: 1.25rem; color: var(--swear-white);">{{ product.title }}</h3>
          <p class="font-mono text-concrete" style="margin-top: 0.5rem; color: var(--swear-concrete);">
            {{ product.price | money }}
          </p>
        </div>
      </a>
    {% else %}
      <p class="font-mono">No products found in this collection.</p>
    {% endfor %}
  </div>

</div>

<style>
  .grid-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
</style>
