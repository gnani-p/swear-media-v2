{% comment %}
  Default template for standard pages.
{% endcomment %}

<div class="page-container container" style="padding-top: 6rem; padding-bottom: 6rem;">
  
  <header class="page-header" style="border-bottom: 2px solid var(--swear-white); padding-bottom: 1rem; margin-bottom: 3rem;">
    <h1 class="font-stencil uppercase" style="font-size: 4rem;">{{ page.title }}</h1>
  </header>

  <div class="page-content font-mono" style="font-size: 1.125rem; line-height: 1.6;">
    {{ page.content }}
    
    {% if page.handle == 'contact' %}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div>
        <!-- Contact Info Block -->
        <div class="p-6 border border-swear-gray bg-swear-black shadow-inner">
          <h3 class="font-stencil uppercase text-xl mb-4">BOOKING & CONTACT</h3>
          <ul class="font-mono text-sm space-y-2 text-concrete">
            <li>Columbus, Ohio</li>
            <li>Email: <a href="mailto:swear.digital@gmail.com" class="text-white hover:text-accent">swear.digital@gmail.com</a></li>
            <li>Phone: <a href="tel:7409197422" class="text-white hover:text-accent">740 919 7422</a></li>
            <li>Instagram: <a href="https://instagram.com/swearmedia" target="_blank" class="text-white hover:text-accent">@swearmedia</a></li>
          </ul>
        </div>
      </div>
      <div>
        {% render 'contact-form' %}
      </div>
    </div>
    {% endif %}
  </div>
  
</div>
