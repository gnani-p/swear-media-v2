{% comment %} Renders the basic Shopify contact form. {% endcomment %}
<div class="contact-form-wrapper">
  {% form 'contact' %}
    
    <h3 class="font-stencil uppercase mb-4" style="font-size: 2rem;">Get In Touch</h3>
    
    {% if form.posted_successfully %}
      <p class="text-accent font-mono mb-4">Your message was successfully sent. We'll be in touch soon.</p>
    {% endif %}

    {% if form.errors %}
      <div class="errors font-mono mb-4" style="color: red; border: 1px solid red; padding: 1rem;">
        {% for field in form.errors %}
          <p>{{ field }} {{ form.errors.messages[field] }}</p>
        {% endfor %}
      </div>
    {% endif %}

    <div class="form-field mb-4">
      <label for="ContactFormName" class="font-mono uppercase text-sm block mb-1">Name</label>
      <input type="text" id="ContactFormName" name="contact[name]" class="input-field" style="width: 100%; background: transparent; border: 1px solid var(--swear-gray); padding: 0.75rem; color: white;">
    </div>

    <div class="form-field mb-4">
      <label for="ContactFormEmail" class="font-mono uppercase text-sm block mb-1">Email</label>
      <input type="email" id="ContactFormEmail" name="contact[email]" class="input-field" style="width: 100%; background: transparent; border: 1px solid var(--swear-gray); padding: 0.75rem; color: white;">
    </div>

    <div class="form-field mb-4">
      <label for="ContactFormMessage" class="font-mono uppercase text-sm block mb-1">Message</label>
      <textarea rows="10" id="ContactFormMessage" name="contact[body]" class="input-field" style="width: 100%; background: transparent; border: 1px solid var(--swear-gray); padding: 0.75rem; color: white;"></textarea>
    </div>

    <button type="submit" class="btn btn-primary w-full" style="width: 100%;">
      Send Message
    </button>
  {% endform %}
</div>
